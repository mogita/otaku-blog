baseURL: "https://blog.mogita.com/"
languageCode: "en-us"
title: "Otaku Blog"
theme: "etch"
enableInlineShortcodes: true
pygmentsCodeFences: true
pygmentsUseClasses: true

paginate: 10
paginatePath: "page"
permalinks:
  /about: "/about.html"
  posts: "/:slug.html"
trimTrailingSlash: true

params:
  description: "mogita's personal blog"
  dark: "off"
  copyright: "Copyright Â© 2015-2021 mogita"
  highlight: true

menu:
  main:
    - identifier: "about"
      name: "About"
      title: "About"
      url: "/about"
      weight: 20
    - identifier: "rss"
      name: "RSS"
      title: "RSS"
      url: "/index.xml"
      weight: 10

markup:
  highlight:
    noClasses: false
  goldmark:
    renderer:
      unsafe: true
